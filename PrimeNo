def is_prime(num):
    if num < 2:
        return False
    for i in range(2, int(num**0.5) + 1):
        if num % i == 0:
            return False
    return True
 
# Example usage:
number_to_check = 29
if is_prime(number_to_check):
    print(number_to_check, "is a prime number")
else:
    print(number_to_check, "is not a prime number")
   